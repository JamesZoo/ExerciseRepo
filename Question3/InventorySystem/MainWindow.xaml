<Window x:Class="InventorySystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventorySystem"
        Title="MainWindow" Height="900" Width="1300">
  <Grid>
    <TwoPaneView PanePriority="Pane1" Pane2Length="Auto">
      <TwoPaneView.Pane1>
        <TextBlock Text="Panel1" Background="LightBlue"></TextBlock>
      </TwoPaneView.Pane1>
      <TwoPaneView.Pane2>
        <TextBlock Text="Panel2"></TextBlock>
      </TwoPaneView.Pane2>
    </TwoPaneView>
  </Grid>
</Window>
