<Window x:Class="InventorySystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventorySystem"
        xmlns:views="clr-namespace:InventorySystem.View.Views;assembly=InventorySystem.View"
        Title="MainWindow" Height="700" Width="1000" MinHeight="700" MinWidth="1000"
        Loaded="MainWindow_OnLoaded" Closed="MainWindow_OnClosed">
  <Grid>
    <TwoPaneView PanePriority="Pane1" Pane1Length="2*" Pane2Length="*">
      <TwoPaneView.Pane1>
        <views:InventoryOverview x:Name="InventoryOverview"/>
      </TwoPaneView.Pane1>
      <TwoPaneView.Pane2>
        <StackPanel>
          <TextBlock Text="Evaluating Theme"/>
          <TextBox Width="100" Margin="0,10"></TextBox>
          <Button Content="button" Width="100"/>
          <CheckBox />
          <RadioButton />
          <ComboBox IsEditable="True" Text="hello" Width="100" />
          <ComboBox IsEditable="False" Width="100"></ComboBox>
          <ListView Width="100">
            <ListViewItem />
            <ListViewItem />
          </ListView>
        </StackPanel>
      </TwoPaneView.Pane2>
    </TwoPaneView>
  </Grid>
</Window>
